<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name%>

  <br>

  <label>Genre</label>
  <%= f.text_field :genre_name, list: "genre_autocomplete" %>
  <datalist id="genre_autocomplete">
    <% Genre.all.each do |g| %>
      <%= g.name %>
    <% end %>
  </datalist>

  <br>

  <label>Notes</label>
  <%= f.text_area :notes %>
  <%= f.text_area :notes %>
  <%= f.text_area :notes %>
  <%= f.text_area :notes %>

  <%= f.fields_for :notes do |note_form| %>
    <%= note_form.label :note %>
    <%= note_form.text_area :content, rows: 4, cols: 30 %>
  <% end %>

  <br>

  <%= f.submit %>
<% end %>


